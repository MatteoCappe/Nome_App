<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nomeapp.activities.MyProfileActivity">

    <!-- TODO: vedi perchÃ¨ scrollano solo eventi, ricorda che view iniziale aveva Linear -> Scroll -> Linear ma non funzionava comunque -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--
        capisci come mettere casetta per tornare alla homepage

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/MyProfile_HomeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:layout_margin="20sp"
            android:background="@color/white"
            android:clickable="true"
            app:srcCompat="@drawable/homepage_button" />
        -->

        <!--TODO: visto che ci mette un po' a caricare metti delle etichette con nome cognome ecc -->

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="75dp"
            app:cardBackgroundColor="@color/black"
            android:layout_gravity="center"
            android:layout_margin="20sp">

            <ImageView
                android:id="@+id/MyProfile_ProfileImage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_margin="20sp"
                android:clickable="true"
                app:srcCompat="@drawable/empty_profile_picture" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/MyProfile_Username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:gravity="center"
            android:textSize="20sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/MyProfile_Name"
                android:layout_width="173dp"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"/>

            <TextView
                android:id="@+id/MyProfile_Surname"
                android:layout_width="173dp"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"/>

        </LinearLayout>

        <Button
            android:id="@+id/LogoutButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:layout_margin="10dp"
            android:layout_marginTop="0dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_margin="10sp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/MyProfile_ViewFollowers"
                android:layout_width="173dp"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/MyProfile_Followers"
                    android:layout_width="173dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="Follower"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/MyProfile_ViewFollowing"
                android:layout_width="173dp"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/MyProfile_Following"
                    android:layout_width="173dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="Seguiti"
                    android:textSize="15sp" />
            </LinearLayout>

        </LinearLayout>

        <ListView
            android:id="@+id/MyProfile_EventList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/event_infobox" />

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/MyProfile_EditProfileButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:srcCompat="@android:drawable/ic_menu_edit"
        android:layout_gravity="bottom|left"
        android:layout_margin="20sp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/MyProfile_AddEventButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:srcCompat="@android:drawable/ic_input_add"
        android:layout_gravity="bottom|right"
        android:layout_margin="20sp"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>