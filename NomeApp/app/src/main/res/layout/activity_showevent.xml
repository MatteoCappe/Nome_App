<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nomeapp.activities.ShowEventActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--
        capisci come mettere casetta per tornare alla homepage

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/ShowEvent_HomeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:layout_margin="20sp"
            android:background="@color/white"
            android:clickable="true"
            app:src="@drawable/homepage_button" />
            -->

        <!-- visto che ci mette un po' a caricare metti delle etichette -->

        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="150dp"
            app:cardBackgroundColor="@color/black"
            android:layout_gravity="center"
            android:layout_margin="20sp">

            <ImageView
                android:id="@+id/ShowEvent_eventImage"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_margin="20sp"
                app:srcCompat="@drawable/empty_event_picture" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/ShowEvent_Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/ShowEvent_City"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/ShowEvent_Bio"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:ems="10"
            android:inputType="text|textMultiLine"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/ShowEvent_Date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" />

        <Button
            android:id="@+id/ShowCreatorButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profilo 'Prova'"
            android:layout_margin="10dp"
            android:layout_marginTop="0dp" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/showMyEventFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"/>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

